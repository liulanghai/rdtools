{
  "manifest_version": 3,
  "name": "RdTools",
  "version": "1.0.0",
  "description": "JSON Editor, Base64 Tool, and Authorization Generator",
  "action": {
    "default_title": "Open RdTools Side Panel",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "clipboardWrite",
    "sidePanel"
  ],
  "side_panel": {
    "default_path": "src/index.html"
  }
}